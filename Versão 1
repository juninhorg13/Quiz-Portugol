programa {
	funcao inicio() {
		
//VARIÁVEIS		
    //Nome: valor inserido pelo usuário.
    //Resposta: valor inserido pelo usuário; 
    //carteira: saldo que é atualizado conforme o desempenho no jogo
    //saldoinicial: valor inicial concedido ao usuário. Constante pré-estabelecida.
    
    	inteiro resposta
		inteiro play
		inteiro desafiofinal
		inteiro carteira = 0
		cadeia nome
		inteiro saldoinicial = 500
		
    	
//BOAS VINDAS E REGRAS

    	escreva("++++++++ QUIZ PREMIADO ++++++++")
    	escreva("\nInforme o seu nome: \n")
        	leia(nome)
        limpa()
    	escreva("Olá, ", nome)
    	escreva("\nBem-vindo ao nosso Quiz Premiado!")
    	escreva("\n+++++ REGRAS +++++ ")
    	escreva("\n-- Você inicia o jogo com  R$ 500. \n-- O saldo pode ser alterado conforme o desempenho no jogo.")
    	escreva("\n-- Para cada erro, é descontada a metade do seu saldo. \n-- Para cada acerto, o saldo é dobrado.")
    	
//MENU INICIAL

    	escreva("\nAperte 1 para COMEÇAR!!!\n")
            leia(play)
                se(play == 1) {
                

//PERGUNTA 1
        escreva("\nSALDO DA CARTEIRA: R$ ", saldoinicial)
        
    	escreva("\n\n[PERGUNTA 1] \nQuem descobriu o Brasi?  \n\n1: Pedro Alvares Cabral  \n2: Jade Picon")
    	    escreva("\nRESPOSTA [Marque 1 ou 2]: ")
    	        leia(resposta)
    	 
    	 se(resposta==1) {
    	       escreva ("Você acertou! Seu saldo da carteira foi dobrado!")
    	            carteira = saldoinicial*2
    	                escreva("\nSALDO DA CARTEIRA: R$ ", carteira)
    	                
    	 } senao { 
    	     escreva("Resposta incorreta. Seu saldo foi reduzido à metade.")
    	        carteira = saldoinicial / 2
    	            escreva( "\nSALDO DA CARTEIRA: R$ ", carteira)
    	 }
            limpa()
            
//PERGUNTA 2    	 
    	 escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	 escreva("\n\n[PERGUNTA 2] \nQuanto é 1 + 1?  \n\n1: DOIS \n2: ONZE")
    	 escreva("\nRESPOSTA [Marque 1 ou 2]: ")
    	    leia(resposta)
    	 
    	    se(resposta==1){
    	        escreva("Você acertou novamente! Seu saldo da carteira foi dobrado!")
    	            carteira = carteira*2
    	                escreva("\nSALDO DA CARTEIRA: R$ ", carteira)
    	 }  senao {
    	     escreva("Você errou. Seu saldo foi reduzido à metade.")
    	            carteira = carteira / 2 
    	                escreva( "\nSALDO DA CARTEIRA: R$ ", carteira)
    	 }
    	    limpa()
    	    
//PERGUNTA 3
    	 escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	 escreva("\n\n[PERGUNTA 3] \nQual é a cor do S vermelho da Perdigão? \n\n1 - Branco \n2 - Vermelho. \n3 - Não tem S em Perdigão.")
    	    escreva("\nRESPOSTA [Marque 1 , 2 ou 3]: ")
    	        leia(resposta)
    	 
    	    se(resposta==3) {
    	        escreva("\nVocê acertou! Seu saldo da carteira foi dobrado!")
    	          carteira = carteira*2
    	            escreva("\nSALDO DA CARTEIRA: R$ ", carteira)
    	    } senao {
    	        escreva("Resposta incorreta. Seu saldo foi reduzido pela metade.")
    	            carteira = carteira / 2
    	                escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	    }
    	    limpa()
    	    
//PERGUNTA 4    
            escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	     	 escreva("\n\n[PERGUNTA 4] \nA mãe de Maria tem 5 filhas: Pata, Peta, Pita, Pota... Qual é o nome da 5ª filha? \n\n1 - Maria \n2 - Patati")
    	       escreva("\nRESPOSTA [Marque 1 ou 2]: ")
    	         leia(resposta)
    	 
    	    se(resposta==1) {
    	        escreva("\nVocê acertou! Seu saldo da carteira foi dobrado!")
    	          carteira = carteira*2
    	            escreva("\nSALDO DA CARTEIRA: R$ ", carteira)
    	    } senao {
    	        escreva("Resposta incorreta. Seu saldo foi reduzido pela metade.")
    	        carteira = carteira / 2
    	            escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	    }
    	    limpa()

//PERGUNTA 5
            escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	     	 escreva("\n\n[PERGUNTA 5] \nQual é a capital do Brasil? \n\n1 - Brasília \n2 - Rio de Janeiro")
    	    escreva("\nRESPOSTA [Marque 1 ou 2]: ")
    	        leia(resposta)
    	 
    	    se(resposta == 1) {
    	        escreva("\nVocê acertou! Seu saldo da carteira foi dobrado!")
    	          carteira = carteira*2
    	            escreva("\nSALDO DA CARTEIRA: R$ ", carteira)
    	    } senao {
    	        escreva("Resposta incorreta. Seu saldo foi reduzido pela metade.")
    	        carteira = carteira / 2
    	            escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	    }
            limpa()
//PERGUNTA DESAFIO FINAL
            escreva("SALDO DA CARTEIRA ATÉ O MOMENTO: R$ ", carteira)
            escreva("\n\n[[[[ DESAFIO FINAL ]]]] \n Você pode nesse momento triplicar seu saldo atual caso acerte a pergunta decisiva, ou perder tudo caso erre a questão.")
            escreva("\nAperte qualquer outro número, exceto 1, para encerrar o jogo com seu saldo atual de: R$", carteira)
            escreva("\nSe deseja prosseguir para o DESAFIO FINAL, aperte 1. \n")
                leia(desafiofinal)

//caso o usuário opte em fazer o desafio final

                    se(desafiofinal == 1) {
    
    	     	 escreva("\n\n[DESAFIO FINAL] \nQual é a sigla do estado de Roraima? \n\n1 - RR \n2 - RO")
    	    escreva("\nRESPOSTA [Marque 1 ou 2]: ")
    	        leia(resposta)
    	 
    	    se(resposta == 1) {
    	        escreva("\nVocê acertou! Seu saldo da carteira foi triplicado!")
    	          carteira = carteira*3
    	            escreva("\nSALDO DA CARTEIRA: R$ ", carteira)
    	    } senao {
    	        escreva("Resposta incorreta. Seu saldo foi reduzido pela metade.")
    	        carteira = carteira - carteira
    	            escreva("SALDO DA CARTEIRA: R$ ", carteira)
    	    }            
// caso o usuário não opte em fazer o desafio final            
                } senao {
                    escreva("\nPARABÉNS!! Seu prêmio final é de: R$", carteira)
                }
 // caso o usuário não aperte 1 no início do algoritmo   
                }senao {
                    escreva("\nFIM DE JOGO.")
                }
                

    	 }	// FIM FUNÇÃO INICIO() 
	}
